<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
            android:id="@+id/touchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_world" />

    <EditText
        android:id="@+id/txt_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Port"
        android:layout_alignRight="@+id/touchview"
        android:layout_alignTop="@+id/touchview"
        android:ems="10"
        android:hint="192.168.0.1" >
    </EditText>

    <EditText
        android:id="@+id/txt_Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_IP"
        android:layout_toRightOf="@+id/TextView01"
        android:ems="10"
        android:hint="8810"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_Enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/touchview"
        android:layout_below="@+id/txt_Port"
        android:text="@string/enter" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_Port"
        android:layout_alignLeft="@+id/touchview"
        android:text="IP地址："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Port"
        android:layout_alignRight="@+id/textView1"
        android:text="端口："
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>